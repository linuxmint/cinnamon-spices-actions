[Nemo Action]
Active=true
_Name=Install Debian Package
_Comment=Install .deb package with automatic dependency resolution
Exec=x-terminal-emulator -e bash -c "echo 'Installing %f...' && echo '' && sudo apt install -y '%F' && echo '' && echo '✓ Installation complete!' && echo '' || echo '✗ Installation failed!' ; echo 'Press Enter to close...' ; read"
Selection=s
Extensions=deb;
Mimetypes=application/vnd.debian.binary-package;
Dependencies=apt;
Icon-Name=terminal
Quote=double
